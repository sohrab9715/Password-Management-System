<%- include('header') %>
      <br>
      <div class="container ">
    
        <div class="row">
            <div class="col-md-4 form">
              <h1>Add New Password</h1>
              <hr>
              <form action="/Add-New-Password" method="POST">
                <div class="form-group">
                  <% if(errors !='') { %>
                    <p style="text-align: center; color: red;"><%= errors.txtpassworddetails.msg %></p>
                  <%}%>

                  <% if(success !='') { %>
                    <p style="text-align: center; color: green;"><%= success %></p>
                   <%}%>
                    <label for="exampleInputEmail1">Password Catagory</label>
                    <select class="form-control" name="password_catagory">
                        <option value="">Choose Password Catagory</option>
                        <% if(records.length>0) {
                            records.forEach(function(row){
                              %>
                        <option value="<%= row.Password_Catagory %>"><%= row.Password_Catagory %></option>
                      <%   }) }%>
                    </select>
                </div>
                 
                <div class="form-group">
                  <label for="exampleInputEmail1">Password Details</label>
                  <textarea  class="form-control" rows="5" name="txtpassworddetails" placeholder="Enter Your Password Details" ></textarea>
                </div> 
                <button type="submit" class="btn btn-primary">Add</button>
              </form> <br>
            <p><a href="/View-All-Password"> View All Password List</a></p>

            </div>
        </div>
    </div>
<script>
    CKEDITOR.replace( 'editor' );
</script> 
